<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Interfaces.Menu.MenuFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:tint="#1F000000"
        android:src="@drawable/green_garden"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextField"
        android:layout_above="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blancoPerla"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/menu_logosim"
        android:src="@drawable/logo_sinfondo" />
</RelativeLayout>